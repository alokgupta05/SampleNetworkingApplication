<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp" android:layout_height="150dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/no_image_available"
        android:layout_centerInParent="true"
        android:id="@+id/trackArtImageView" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackName"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:id="@+id/artistName" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLines="2"
        android:id="@+id/trackName"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/trackArtImageView"
         />
</RelativeLayout>